@model IEnumerable<ProjetoDeSia.Models.Tecnica>
@using Microsoft.AspNetCore.Http;



@{
    ViewData["Title"] = "Index";
}

@if (Context.Session.GetString("Utilizador") != null)
{
    <h1>Minhas Tecnicas</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                @if (@item.Utilizador.IdUtilizador.ToString() == @Context.Session.GetString("UtilizadorId"))
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descricao)
                        </td>
                        <td>
                            <a asp-action="EntrarTecnica" asp-route-id="@item.IdTecnica">Entrar</a> |
                            <a asp-action="Edit" asp-route-id="@item.IdTecnica">Edit</a> |
                            <a asp-action="Delete" asp-route-id="@item.IdTecnica">Delete</a>
                        </td>
                    </tr>
                }

            }
        </tbody>
    </table>
}
else
{
    <h1>Erro!!</h1>
    <h1>Voce não tem autorização para aceder a esta página</h1>
}
