                        {
                            <td>Pouca importância</td>
                        } @if (item.Importancia == 2)
                        {
                            <td>Importante</td>
                        } @if (item.Importancia == 3)
                        {
                            <td>Muito importante</td>
                        } @if (item.Importancia == 4)
