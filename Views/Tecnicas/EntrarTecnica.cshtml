                    data: [@Model.pontuacaoGeralquad1 , @Model.pontuacaoGeralquad2, @Model.pontuacaoGeralquad3, @Model.pontuacaoGeralquad4],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                display: false,
                maintainAspectRatio: false,
                //responsive: true,
                scales: {
                    yAxes: [{
                        gridLines: {
                            display: false,
                        },
                        ticks: {
                            min: 0,
                            stepSize: 1,
                        },
                    }],
                }
            }
        });
    </script>
